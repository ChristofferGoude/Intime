<%= render "partials/greeting" %>

<div class="row">
	<div class="col-md-8" id="projects">
		<h1>Projects</h1>
		
		<% @projects.each do |project| %>
			<%= link_to project.projectname, project_path(project.id), {:class => "btn btn-default btn-block"} %>
		<% end %>
		
		<%= link_to 'New project', newproject_path, {:class => "btn btn-primary btn-block"} %>
	</div>
	<div class="col-md-4">
		<h1>Settings</h1>	
		<%= link_to 'Add user', "#", {:class => "btn btn-default btn-block"} %>
	</div>
</div>
